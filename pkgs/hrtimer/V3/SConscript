import os
import rtconfig
from building import *


cwd = GetCurrentDir()

inc = [cwd]
src = ["hrtimer.c"]

if GetDepend(["HRT_USING_OSTICK"]):
    src += ["timestamp_using_ostick.c"]

if GetDepend(["HRT_USING_SYSTICK"]):
    src += ["timestamp_using_systick.c"]

if GetDepend(["HRT_USING_HWTIMER"]):
    src += ["timestamp_using_hwtimer.c"]

if GetDepend(["HRT_USING_CPUTIME"]):
    src += ["timestamp_using_cputime.c"]

objs = DefineGroup("lib/common", src, depend=["PKG_USING_HRTIMER_V3"], CPPPATH=inc)


Return("objs")
