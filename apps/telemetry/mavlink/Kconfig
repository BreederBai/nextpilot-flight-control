menuconfig TEL_USING_MAVLINK
	bool "mavlink"
	select PKG_USING_VAR_LEN_RINGBUFFER
	default n
	---help---
		Enable support for mavlink

if TEL_USING_MAVLINK
	config MAVLINK_DIALECT
		string "Mavlink dialect"
		default "common"
		---help---
			Select the Mavlink dialect to generate and use.

