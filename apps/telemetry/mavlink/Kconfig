	# config MAVLINK_COMM_NUM_BUFFERS
	# 	int "mavlink max instance"
	# 	range 1 6
	# 	default 6 if MAVLINK_USING_UDP
	# 	default 4

	config MAVLINK_HANDLE_PARAMETERS
        bool "handle parameter service"
		default n

	config MAVLINK_UAVCAN_PARAMETERS
		depends on TEL_USING_UAVCAN && MAVLINK_HANDLE_PARAMETERS
		bool "Mavlink UAVCAN parameter support"
		default y
		---help---
			Expose UAVCAN parameters over Mavlink.

	config MAVLINK_HANDLE_MISSION
        bool "handle mission service"
		default n

    config MAVLINK_HANDLE_FTP
        bool "handle ftp service"
        default n

	config MAVLINK_USING_SHELL
		bool "enable mavlink shell service"
		default n

